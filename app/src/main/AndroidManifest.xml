<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".util.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/myvet_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.UnipiVetApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.prehome.PreHomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.editprofile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.appointmentdetails.AppointmentDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.appointments.AppointmentsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.docdetails.DocDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".ui.onboarding.OnboardingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>